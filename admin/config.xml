<?xml version="1.0" encoding="utf-8"?>
<config>
  <fieldset
    name="authnet_settings"
    label="COM_CIMPAY_AUTHNET_SETTINGS_LABEL"
    description="COM_CIMPAY_AUTHNET_SETTINGS_DESC"
  >
    <field
      name="authnet_login"
      type="text"
      label="COM_CIMPAY_FIELD_AUTHNET_LOGIN_LABEL"
      description="COM_CIMPAY_FIELD_AUTHNET_LOGIN_DESC"
      default=""
      size="20"
    />
    <field
      name="authnet_transaction_key"
      type="text"
      label="COM_CIMPAY_FIELD_AUTHNET_TRANSACTION_KEY_LABEL"
      description="COM_CIMPAY_FIELD_AUTHNET_TRANSACTION_KEY_DESC"
      default=""
      size="20"
    />
    <field
      name="authnet_api_host"
      type="text"
      label="COM_CIMPAY_FIELD_AUTHNET_API_HOST_LABEL"
      description="COM_CIMPAY_FIELD_AUTHNET_API_HOST_DESC"
      default="apitest.authorize.net"
      size="20"
    />
    <field
      name="authnet_api_path"
      type="text"
      label="COM_CIMPAY_FIELD_AUTHNET_API_PATH_LABEL"
      description="COM_CIMPAY_FIELD_AUTHNET_API_PATH_DESC"
      default="/xml/v1/request.api"
      size="20"
    />
    <field
      name="authnet_validation_mode"
      type="list"
      label="COM_CIMPAY_FIELD_AUTHNET_VALIDATION_MODE_LABEL"
      description="COM_CIMPAY_FIELD_AUTHNET_VALIDATION_MODE_DESC"
      default="oldLiveMode"
    >
      <option value="none">None</option>
      <option value="testMode">Test Mode</option>
      <option value="liveMode">Live Mode</option>
      <option value="oldLiveMode">Old Live Mode</option>
    </field>
  </fieldset>
</config>
